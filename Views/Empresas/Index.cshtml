@using Microsoft.AspNetCore.Http
@model IEnumerable<ProyectoWeb.Models.TbEmpresa>
<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <p>
                <a asp-action="Create" class="btn btn-sm btn-success">Nueva Empresa</a>
            </p>
            <input id="controller" type="hidden" value="Empresas" />
            <table id="tableInfo" class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rfc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Direccion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ciudad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Estado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Usuario)
                        </th>
                        @if (Context.Session.GetInt32("tipoUsuario") == 1)
                        {
                            <th>
                                Estado
                            </th>
                            <th></th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rfc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario)
                        </td>
                        @if (Context.Session.GetInt32("tipoUsuario") == 1)
                        {
                            <td id="status-@Html.DisplayFor( modelItem => item.IdEmpresa )">
                                @if (item.Status == 1)
                                {
                                    <button value="@item.IdEmpresa" class="baja btn btn-success">Activo</button>
                                }
                                else if (item.Status == 2)
                                {
                                    <button value="@item.IdEmpresa" class="alta btn btn-danger">Inactivo</button>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdEmpresa" class="btn btn-sm btn-primary"><i class="icon-edit"></i></a> |
                            </td>
                        }
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>